<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycarmate.controllers.MaintenanceRecordsController" style="-fx-padding: 20; -fx-background-color: #f8f8f8;">

    <Label text="Maintenance Records" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Car Selector -->
    <ComboBox fx:id="carSelector" promptText="Select a Car" />

    <!-- Maintenance Records Table -->
    <TableView fx:id="recordsTable" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date of Service" />
            <TableColumn fx:id="serviceTypeColumn" text="Service Type" />
            <TableColumn fx:id="costColumn" text="Cost" />
            <TableColumn fx:id="mileageColumn" text="Mileage At Service" />
        </columns>
    </TableView>

    <!-- Add/Edit/Delete Buttons -->
    <HBox spacing="10">
        <Button text="Add Record" onAction="#handleAddRecord" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        <Button text="Edit Record" onAction="#handleEditRecord" styleClass="modal-edit-button" />
        <Button text="Delete Record" onAction="#handleDeleteRecord" styleClass="modal-cancel-button" />
    </HBox>
</VBox>
