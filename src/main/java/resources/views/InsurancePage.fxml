<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycarmate.controllers.InsurancePageController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #f8f8f8;">

    <!-- Input Section -->
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Add Insurance Record" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Car Selector -->
        <HBox spacing="10">
            <Label text="Select Car:" />
            <ComboBox fx:id="carSelector" prefWidth="200" />
        </HBox>

        <!-- Provider Name -->
        <HBox spacing="10">
            <Label text="Provider Name:" />
            <TextField fx:id="providerNameField" promptText="Enter Provider Name" prefWidth="200" />
        </HBox>

        <!-- Policy Number -->
        <HBox spacing="10">
            <Label text="Policy Number:" />
            <TextField fx:id="policyNumberField" promptText="Enter Policy Number" prefWidth="200" />
        </HBox>

        <!-- Start Date -->
        <HBox spacing="10">
            <Label text="Start Date:" />
            <ComboBox fx:id="startMonthPicker" promptText="Month" prefWidth="100" />
            <ComboBox fx:id="startYearPicker" promptText="Year" prefWidth="100" />
        </HBox>

        <!-- End Date -->
        <HBox spacing="10">
            <Label text="End Date:" />
            <ComboBox fx:id="endMonthPicker" promptText="Month" prefWidth="100" />
            <ComboBox fx:id="endYearPicker" promptText="Year" prefWidth="100" />
        </HBox>

        <!-- Coverage Amount -->
        <HBox spacing="10">
            <Label text="Coverage Amount:" />
            <TextField fx:id="coverageAmountField" promptText="Enter Coverage Amount" prefWidth="200" />
        </HBox>

        <!-- Add Insurance Button -->
        <Button text="Add Insurance" onAction="#handleAddInsurance" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10;" />
    </VBox>

    <!-- Insurance Records Table -->
    <VBox spacing="10">
        <Label text="Insurance Records" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <TableView fx:id="insuranceTable" prefHeight="300" prefWidth="800">
            <columns>
                <TableColumn fx:id="carColumn" text="Car" prefWidth="150" />
                <TableColumn fx:id="providerNameColumn" text="Provider Name" prefWidth="150" />
                <TableColumn fx:id="policyNumberColumn" text="Policy Number" prefWidth="150" />
                <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100" />
                <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100" />
                <TableColumn fx:id="coverageAmountColumn" text="Coverage Amount" prefWidth="100" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>
</VBox>
