<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox spacing="15" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycarmate.controllers.EditInsuranceController"
      styleClass="modal-container">
    <stylesheets>
        <URL value="@/styles/EditInsuranceModal.css" />
    </stylesheets>

    <Label text="Edit Insurance Record" styleClass="modal-title" />

    <TextField fx:id="providerField" promptText="Provider Name" styleClass="modal-textfield" />
    <TextField fx:id="policyField" promptText="Policy Number" styleClass="modal-textfield" />
    <HBox spacing="10">
        <ComboBox fx:id="startMonthPicker" promptText="Start Month" styleClass="modal-combobox" />
        <ComboBox fx:id="startYearPicker" promptText="Start Year" styleClass="modal-combobox" />
    </HBox>
    <HBox spacing="10">
        <ComboBox fx:id="endMonthPicker" promptText="End Month" styleClass="modal-combobox" />
        <ComboBox fx:id="endYearPicker" promptText="End Year" styleClass="modal-combobox" />
    </HBox>
    <TextField fx:id="coverageField" promptText="Coverage Amount" styleClass="modal-textfield" />

    <HBox spacing="10" styleClass="modal-buttons-container">
        <Button text="Save" onAction="#handleSave" styleClass="modal-save-button" />
        <Button text="Cancel" onAction="#handleCancel" styleClass="modal-cancel-button" />
    </HBox>
</VBox>
