<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycarmate.controllers.MaintenanceRecordsController"
      style="-fx-padding: 20; -fx-background-color: #f8f8f8;">
    <stylesheets>
        <URL value="@/styles/CarMaintenancePage.css" />
    </stylesheets>

    <HBox spacing="10" style="-fx-padding: 10;">
        <Button fx:id="backToDashboardButton" text="Back to Dashboard" alignment="TOP_RIGHT" onAction="#navigateToDashboard" styleClass="back-button" />
    </HBox>

    <Label text="Maintenance Records" styleClass="page-title" />

    <!-- Car Selector -->
    <ComboBox fx:id="carSelector" promptText="Select a Car" styleClass="car-selector" />

    <!-- Buttons Above Table -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Add Record" onAction="#handleAddRecord" styleClass="add-button" />
        <Button text="Edit Record" onAction="#handleEditRecord" styleClass="edit-button" />
        <Button text="Delete Record" onAction="#handleDeleteRecord" styleClass="delete-button" />
    </HBox>

    <!-- Maintenance Records Table -->
    <TableView fx:id="recordsTable" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date of Service" />
            <TableColumn fx:id="serviceTypeColumn" text="Service Type" />
            <TableColumn fx:id="costColumn" text="Cost" />
            <TableColumn fx:id="mileageColumn" text="Mileage At Service" />
        </columns>
    </TableView>
</VBox>
